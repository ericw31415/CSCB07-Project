<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title input for the complaint -->
    <EditText
        android:id="@+id/complaintTitleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/complaint_title_hint"
        android:inputType="text"
        android:maxLines="1"/>

    <!-- Detailed description input for the complaint -->
    <EditText
        android:id="@+id/complaintDetailsEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="@string/complaint_details_hint"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:minLines="5"/>

    <!-- Submit button for the complaint -->
    <Button
        android:id="@+id/submitComplaintButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit_complaint"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>